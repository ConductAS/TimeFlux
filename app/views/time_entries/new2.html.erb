				<td><%= label_tag "Hours" %><%= text_field_tag "monday_hours", 0.0, :size => 5 %></td>
				<td><%= label_tag "Notes" %><%= text_field_tag "monday_notes", nil, :size => 70 %></td>
			</tr>
			<tr> 
