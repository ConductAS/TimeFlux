
<h1>Details</h1>

<%= render :partial => 'sub_menu' -%>

<br />

<table>
  <tr><td>User     </td><td><b><%= @user.fullname %> </b></td></tr>
  <tr><td>Project  </td><td><b><%= @project.name %></b></td></tr>
  <tr><td>Customer </td><td><b><%= @project.customer.name %></b></td></tr>
</table>
<br/>

<table width="100%" class="regular">
  <tr><th>Date</th><th>Activity</th><th>Type</th><th>Status</th><th style="text-align:right">Hours</th><th>Notes</th></tr>
  <% total = 0 %>
  <% @time_entries.each do |e|%>
    <tr>
      <td><%= e.date %></td>
      <td><%= e.activity.name %></td>
      <td><%= e.hour_type.name %></td>
      <td><%= e.status_str %></td>
      <td width="2%" style="text-align:right"><%= e.hours %></td>
      <td width="60%"><%= e.notes %></td>

    </tr>
    <% total += e.hours %>
  <% end %>
    <tr><th colspan="5" class="overline" style="text-align:right">Total <%= total -%></th><th class="overline"></th></tr>
</table>

<br/>
<%= link_to "Back", :action => 'billing' %>