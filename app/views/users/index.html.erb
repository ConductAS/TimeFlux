<p class="notice"><%= flash[:notice] %></p>
<p class="error"><%= flash[:error] %></p>

<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

<%= will_paginate @users %>
<% for user in @users %>
  <tr>
    <td><%=h user.fullname %></td>
    <td><%=h user.login %></td>
    <td><%=h user.operative_status %></td>
    <td>
      <%= link_to image_tag("magnifier.png", :title => "Show"), user_path(user) %>
      <%= link_to image_tag("pencil.png", :title => "Edit"), :action => "edit", :id => user %>
      <%= link_to image_tag("delete.png", :title => "Delete"), user_path(user), :method => :delete, :confirm => 'Really remove user?' %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @users %>

<br />

<%= link_to 'New user', new_user_path %>
