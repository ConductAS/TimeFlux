<h1>Create New Activity</h1>

<% form_for(@activity, :url => {:action => :create} ) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :category %><br />
    <%= collection_select(:activity, :category_id, @categories, :id, :name) %>
  </p>

    <p>

  <%= f.hidden_field(:active, :value => true) %>
    <%= f.submit "Create" %>
  </p>
<% end %>

