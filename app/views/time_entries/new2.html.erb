<h1>Time Entry</h1>
<p class="notice"><%= flash[:notice] %></p>
<p>
	<h2>Week: <%= @date.cweek %></h2>
</p>
<p> 
	<table>
		<% form_tag("/time_entries/create") do -%>
			<tr> 
				<%= hidden_field_tag "monday_date", @date %>
