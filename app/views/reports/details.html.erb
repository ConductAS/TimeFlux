
<h1>Details</h1>

<%= render :partial => 'sub_menu' -%>

<p>
  User <b><%= @user.fullname %> </b><br/>
  Project <b><%= @project.name %></b>
</p>

<% time_entries = TimeEntry.for_user(@user).for_project(@project).between(@day, @day.at_end_of_month) %>

<table>
  <tr><th>Date</th><th>Hours</th><th>Notes</th></tr>
<% time_entries.each do |e|%>
  <tr>
<td><%= e.date %></td>
<td><%= e.hours %></td>
<td><%= e.notes %></td>
  </tr>
<% end %>
</table>

<br/>
<%= link_to "Back", :action => 'billing' %>