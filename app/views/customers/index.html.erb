<h1>Listing customers</h1>

<%= render :partial => 'admin/menu' -%>

 <p class="notice"><%= flash[:notice] %></p>
 <p class="error"><%= flash[:error] %></p>

<%= will_paginate @customers %>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.name %></td>
    <td>
      <%= link_to image_tag("application_add.png", :title => "Manage"), customer %>
      <%= link_to image_tag("pencil.png", :title => "Edit"), edit_customer_path(customer) %>
      <%= link_to image_tag("delete.png", :title => "Delete"), customer, :method => :delete, :confirm => 'Really remove customer?' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New customer', new_customer_path %>