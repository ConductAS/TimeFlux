<p class="notice"><%= flash[:notice] %></p>
<p class="error"><%= flash[:error] %></p>
<h1>Tag Types</h1>

  <%= render :partial => 'activities/sub_menu', :locals => { :tag_types => @tag_types } -%>

<table>
	<% @tag_types.each do |c| -%>
		<tr>
				<td><%= c.name %></td>
				<td><%= link_to "Remove", :action => "destroy", :id => c %></td>
		</tr>
	<% end -%>
</table>
<hr/>
<p>
	<% form_for :tag_type, @tag_type, :url => {:action => "create"} do |f| -%>
		New tag type: <%= f.text_field :name %>
		<%= submit_tag "Create" %>
	<% end -%>
</p>