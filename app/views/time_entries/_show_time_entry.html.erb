<tr class="time_entry">						
	<td width="25%"><%= link_to time_entry.activity.truncated_name_path(22), activity_path(time_entry.activity) %></td>
	<td width="15%"><%= truncate(time_entry.hour_type.name, :length => 15) %></td> 
	<td width="5%"><%= time_entry.hours %></td> 
	<td width="45%"><%= time_entry.notes %></td>
	<td width="10%"><span class="action_icons"><%= link_to_remote(image_tag("pencil.png", :title => 'edit'), { :url => { :action => :edit, :user_id => @user.id, :id => time_entry.id }, :method => :get },
		:href => edit_user_time_entry_path(@user, time_entry), :method => :get) %>
	<% unless defined? in_form -%>
		<% form_remote_tag :url => user_time_entry_path(@user, time_entry), :confirm => "Are you sure?",
			:html => { :action => confirm_destroy_user_time_entry_path(@user, time_entry, :date => @date), :method => :delete, :class => "inline_form" }  do %>
				<%= image_submit_tag "delete.png", :title => 'delete' %>
			<% end -%></span></td>
	<% else %>
		<td></td>
	<% end -%>
</tr>