<h1>Listing customers</h1>

<%= render :partial => 'activities/sub_menu', :locals => { :tag_types => @tag_types } -%>

 <p class="notice"><%= flash[:notice] %></p>
 <p class="error"><%= flash[:error] %></p>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%=h customer.name %></td>
    <td>
      <%= link_to image_tag("magnifier.png", :title => "Show"), customer %>
      <%= link_to image_tag("pencil.png", :title => "Edit"), edit_customer_path(customer) %>
      <%= link_to image_tag("delete.png", :title => "Delete"), customer, :method => :delete, :confirm => 'Really remove customer?' %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New customer', new_customer_path %>