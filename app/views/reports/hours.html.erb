
<h2><%= @title %></h2>

<% if @debug then %>
  <p><%= @debug %>,  (<%= @debug.class %>)</p>
<% end %>

<% form_tag :action => 'hours', :method => 'get' do %>
  <label for="user">User</label>
   <%= select_tag('user', options_from_collection_for_select( @users, 'id', 'fullname', @selected_user.id) ) %>

  <label for="year">Year</label>
  <%= select_tag "year", options_for_select(@years, @selected_year), {:include_blank => 'None'} %>

  <label for="month">Month</label>

    <%= select_tag "month", options_from_collection_for_select( @months, 'first', 'last', @selected_month  ) %>

  <%= submit_tag 'Generate' %>
<% end %>

  <hr/>


<%= @table.to_html() -%>

<%= render :partial => 'download', :locals => { :params => params } -%>


