jQuery('#time_entry_dialog').html("<%= escape_javascript(render :partial => 'time_entries', 
       :locals => { :user => @user, :activity => @activity, :time_entry => @time_entry, :time_entries => @time_entries })%>");

enableAjaxFormSubmit('#new_time_entry');

<% if @errors %>
	jQuery('#time_entry_dialog_errors').html("<%= @errors %>");
<% end %>

<% unless @time_entries.empty? %>
	jQuery('#existing_time_entries').show();
<% end %>

jQuery('#time_entry_dialog').dialog({ 
	title: "Time Entries for <%= @date %>", 
	modal: true,
	draggable: false,
	width: 600,
		close: function() {
			var url = "<%= refresh_totals_user_time_entries_path(@user, :date => @date, :activity_id => @activity.id) %>"; 	
			jQuery.get(url, null, null, "script");
		}
});